---
import MainLayout from '@/layouts/main-layout.astro'
import { socialResources } from '@/assets/data/social'
import LinkCard from '@/components/cards/link-card.astro'
import { siteConfig } from '@/config/site'
import { addUtmParams } from '@/lib/utils'

const socialLd = {
  '@context': 'https://schema.org',
  '@type': 'WebPage',
  name: 'Social - Connect with Me',
  description:
    'Connect with me across various social platforms. Find my professional profiles, creative work, and ways to support my projects.',
  url: `${siteConfig.url}/social`,
  mainEntity: {
    '@type': 'ItemList',
    name: 'Social Profiles',
    description: 'Collection of social media profiles and professional networks for connecting and collaboration',
    numberOfItems: socialResources.length,
    itemListElement: socialResources.map((item, index) => ({
      '@type': 'ListItem',
      position: index + 1,
      name: item.label,
      description: item.description,
      url: addUtmParams(item.link),
      category: item.category,
      keywords: item.tags.join(', '),
    })),
  },
  publisher: {
    '@type': 'Person',
    name: 'Yokesh K.S.',
    url: siteConfig.url,
  },
  breadcrumb: {
    '@type': 'BreadcrumbList',
    itemListElement: [
      { '@type': 'ListItem', position: 1, name: 'Home', item: siteConfig.url },
      { '@type': 'ListItem', position: 2, name: 'Social', item: `${siteConfig.url}/social` },
    ],
  },
}
---

<MainLayout
  title="Social"
  description="Connect with me across various social platforms. Find my professional profiles, creative work, and ways to support my projects."
>
  <section class="py-8 sm:py-16 lg:py-24">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="mx-auto mb-12 flex max-w-2xl flex-col items-center justify-center space-y-4 text-center sm:mb-16">
        <span class="border border-border rounded-full px-3 py-1 font-normal text-sm">Connect</span>
        <h2 class="font-semibold text-2xl md:text-3xl lg:text-4xl">Social Profiles</h2>
        <p class="text-muted-foreground text-xl">
          Find me across various platforms where I share my work, research, and creative projects.
        </p>
      </div>

      <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
        {socialResources.map((resource) => (
          <LinkCard item={resource} />
        ))}
      </div>
    </div>
  </section>
</MainLayout>

<script type="application/ld+json" set:html={JSON.stringify(socialLd)} />
